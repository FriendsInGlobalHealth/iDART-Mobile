<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="view"
            type="mz.org.fgh.idartlite.viewmodel.HomeVM" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
         >

        <include layout="@layout/app_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:padding="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_mz_misau" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_mz_pepfar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:src="@mipmap/logo_fgh" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:src="@mipmap/logo_cmam" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:text="Desenvolvido Pela Friends in Global Health(FGH)"
                android:layout_weight="0.6"
                android:textSize="16sp"
                android:textColor="@color/logo"
                android:gravity="right"
                android:paddingEnd="@dimen/dimen_18dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="0.5"
                android:gravity="center|top"
                android:text="@{view.appVersionName}"
                android:textColor="@color/logo"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>



</layout>