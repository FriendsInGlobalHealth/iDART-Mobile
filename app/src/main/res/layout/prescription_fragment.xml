<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.patient.PrescriptionFragment"
    >
    <data>
        <variable
            name="viewModel"
            type="mz.org.fgh.idartlite.viewmodel.PrescriptionVM" />
        <import type="android.view.View"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/initial_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de Prescrições"
                android:background="@color/background_layout"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="5dp"
                app:drawableEndCompat="@drawable/ic_row_dados_pessoais"
                android:layout_margin="@dimen/dimen_5dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_prescriptions"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
        </LinearLayout>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/new_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_plus"
            android:layout_gravity="bottom|end"
            app:elevation="6dp"
            android:onClick="@{() -> viewModel.requestForNewRecord()}"
            android:layout_margin="@dimen/fab_margin"
            app:pressedTranslationZ="12dp"/>




    </FrameLayout>
</layout>