<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="patient"
            type="mz.org.fgh.idartlite.model.Patient" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_bar" />

        <include layout="@layout/pacient_info" bind:patient="@{patient}"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.patient.EpisodeDetailsActivity">


            <TextView
                android:id="@+id/episodeDateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="277dp"
                android:layout_marginRight="277dp"
                android:text="@string/data_da_visita"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintHorizontal_bias="1.0"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editEpisodeDate"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintHorizontal_bias="0.28"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toEndOf="@+id/calendarIcon"
                bind:layout_constraintTop_toBottomOf="@+id/episodeDateLabel" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:background="@color/background_layout"
                android:text="@string/adicionar_episodio"
                android:textColor="@color/white"
                android:textSize="20sp"
                bind:drawableEndCompat="@drawable/ic_row_dados_pessoais"
                bind:layout_constraintBottom_toTopOf="@+id/textView6"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintHorizontal_bias="0.0"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintVertical_bias="0.666" />

            <TextView
                android:id="@+id/episodeStartReasonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="277dp"
                android:layout_marginRight="277dp"
                android:text="@string/motivo_de_inicio"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintHorizontal_bias="0.0"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/editEpisodeDate" />

            <TextView
                android:id="@+id/comboStartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/episodeStartReasonLabel" />

            <Spinner
                android:id="@+id/spinnerStartReason"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toEndOf="@+id/comboStartIcon"
                bind:layout_constraintTop_toBottomOf="@+id/episodeStartReasonLabel" />

            <TextView
                android:id="@+id/episodeStopReasonLabel"
                android:layout_width="93dp"
                android:layout_height="16dp"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="290dp"
                android:layout_marginRight="290dp"
                android:text="@string/motivo_de_fim"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintHorizontal_bias="1.0"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/spinnerStartReason" />

            <TextView
                android:id="@+id/comboStopIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/episodeStopReasonLabel" />

            <Spinner
                android:id="@+id/spinnerStopReason"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toEndOf="@+id/comboStopIcon"
                bind:layout_constraintTop_toBottomOf="@+id/episodeStopReasonLabel" />

            <TextView
                android:id="@+id/notesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="340dp"
                android:layout_marginRight="340dp"
                android:text="@string/notas"
                app:layout_constraintHorizontal_bias="0.0"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/spinnerStopReason" />

            <TextView
                android:id="@+id/comboNotesIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_round_notes_24"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/notesLabel" />

            <EditText
                android:id="@+id/editTextEpisodeObservation"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintHorizontal_bias="0.146"
                bind:layout_constraintStart_toEndOf="@+id/comboNotesIcon"
                bind:layout_constraintTop_toBottomOf="@+id/notesLabel" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="196dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:onClick="createEpisode"
                app:layout_constraintVertical_bias="1.0"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/editTextEpisodeObservation"
                bind:srcCompat="@drawable/ic_round_check_circle_24" />

            <TextView
                android:id="@+id/calendarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/episodeDateLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>