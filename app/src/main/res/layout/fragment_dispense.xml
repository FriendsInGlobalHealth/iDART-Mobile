<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.patient.DispenseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/initial_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Aviamentos"
            android:background="@color/background_layout"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            app:drawableEndCompat="@drawable/ic_row_dados_pessoais"
            android:layout_margin="@dimen/dimen_5dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_dispenses"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_dispense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_plus"
        app:elevation="6dp"
        android:layout_margin="@dimen/fab_margin"
        app:pressedTranslationZ="12dp" />

</FrameLayout>
</layout>