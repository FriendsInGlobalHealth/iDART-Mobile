<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="pacient_nid">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
    </style>

    <style name="us_content">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
    </style>

    <style name="pacient_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <style name="pacient_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
    </style>

    <!-- App Compat Alert Dialog Style -->
    <style name="StyleAppCompatAlertDialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="patient_activity_lists" parent="Base.CardView">
        <item name="android:textSize">@dimen/dimen_10dp</item>
    </style>

    <style name="input_labels">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
    </style>


</resources>